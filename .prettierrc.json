{
	"useTabs": true,
	"tabWidth": 4,
	"semi": true,
	"singleQuote": true,
	"quoteProps": "as-needed",
	"trailingComma": "es5",
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "always",
	"printWidth": 100,
	"endOfLine": "lf",
	"overrides": [
		{
			"files": ["*.json", "*.jsonc"],
			"options": {
				"useTabs": true,
				"tabWidth": 4
			}
		},
		{
			"files": ["*.md"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": ["*.yaml", "*.yml"],
			"options": {
				"useTabs": false,
				"tabWidth": 2,
				"singleQuote": false
			}
		}
	]
}
