{
	"name": "room-card-minimalist",
	"version": "1.1.1-beta.2",
	"description": "UI-Lovelace-Minimalist styled room overview card",
	"main": "src",
	"scripts": {
		"build": "npx webpack --mode production --output-filename room-card-minimalist.js",
		"build:dev": "npx webpack --mode development --output-filename room-card-minimalist.js",
		"build:stats": "npx webpack --mode production --output-filename room-card-minimalist.js --json stats",
		"build:analyze": "npm run build:stats && npx webpack-bundle-analyzer stats",
		"watch": "npx webpack serve",
		"docker:start": "docker compose -f docker/docker-compose.yml up",
		"docker:stop": "docker compose -f docker/docker-compose.yml down",
		"prepare": "husky install",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"format:js": "prettier --write 'src/**/*.js'",
		"format:yaml": "prettier --write '**/*.{yaml,yml}'",
		"format:json": "prettier --write 'src/**/*.json'"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@babel/core": "^7.25.2",
		"@babel/preset-env": "^7.25.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"babel-loader": "^9.1.3",
		"babel-plugin-template-html-minifier": "^4.1.0",
		"husky": "^8.0.0",
		"prettier": "^3.6.2",
		"terser-webpack-plugin": "^5.3.10",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^5.2.2"
	},
	"dependencies": {
		"lit": "^3.0.2"
	}
}
