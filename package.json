{
	"name": "room-card-minimalist",
	"version": "1.4.3",
	"description": "UI-Lovelace-Minimalist styled room overview card",
	"main": "src",
	"scripts": {
		"build": "npx webpack --mode production --output-filename room-card-minimalist.js",
		"build:dev": "npx webpack --mode development --output-filename room-card-minimalist.js",
		"build:stats": "npx webpack --mode production --output-filename room-card-minimalist.js --json stats",
		"build:analyze": "npm run build:stats && npx webpack-bundle-analyzer stats",
		"watch": "npx webpack serve",
		"docker:start": "docker compose -f docker/docker-compose.yml up",
		"docker:stop": "docker compose -f docker/docker-compose.yml down",
		"prepare": "husky",
		"format": "prettier --write --ignore-path=.prettierignore .",
		"format:check": "prettier --check .",
		"format:js": "prettier --write 'src/**/*.js'",
		"format:ts": "prettier --write 'src/**/*.ts'",
		"format:yaml": "prettier --write '**/*.{yaml,yml}'",
		"format:json": "prettier --write 'src/**/*.json'",
		"typecheck": "tsc --noEmit"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.29.0",
		"@babel/preset-env": "^7.29.0",
		"@commitlint/cli": "^20.4.1",
		"@commitlint/config-conventional": "^20.4.1",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^12.0.5",
		"@semantic-release/release-notes-generator": "^14.1.0",
		"@types/node": "^25.2.3",
		"babel-loader": "^10.0.0",
		"babel-plugin-template-html-minifier": "^4.1.0",
		"husky": "^9.1.7",
		"prettier": "^3.8.1",
		"semantic-release": "^25.0.3",
		"terser-webpack-plugin": "^5.3.16",
		"ts-loader": "^9.5.0",
		"typescript": "^5.8.0",
		"webpack": "^5.105.2",
		"webpack-cli": "^6.0.1",
		"webpack-dev-server": "^5.2.3"
	},
	"dependencies": {
		"lit": "^3.3.2"
	}
}
